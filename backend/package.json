{
    "name": "budget4k-backend",
    "version": "1.0.0",
    "repository": "https://github.com/datasektionen/budget4k",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev --rs src/index.ts",
        "start": "tsc && node ./dist/index.js",
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "db:seed": "NODE_ENV=db_seed ts-node-dev src/prisma/seed.ts",
        "db:clear": "NODE_ENV=db_clear ts-node-dev src/util/clear-db.ts"
    },
    "dependencies": {
        "@prisma/client": "^4.3.1",
        "express": "^4.18.1",
        "http-status-codes": "^2.2.0",
        "swagger-jsdoc": "^6.2.5",
        "swagger-ui-express": "^4.5.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.7.18",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "add": "^2.0.6",
        "eslint": "^8.24.0",
        "nodemon": "^2.0.20",
        "prisma": "^4.3.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.3",
        "typescript-transform-paths": "^3.3.1"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    }
}
